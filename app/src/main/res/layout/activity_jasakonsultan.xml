<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="#ffffff">

    <ScrollView
        android:layout_weight="3"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="926dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@color/hijau">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="50dp"
                    android:background="@drawable/konsultan"
                    android:src="@drawable/konsultan" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Jasa Konsultan"
                    android:textColor="@color/white"
                    android:layout_marginTop="150dp"
                    android:layout_centerHorizontal="true"
                    android:textAlignment="center"
                    android:layout_marginRight="175dp"
                    android:textSize="20dp" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="@color/hijau">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Total Rp. " />

                <TextView
                    android:id="@+id/tv_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/black"
                    android:textSize="16dp" />

                <Button
                    android:id="@+id/btn_bayar"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="180dp"
                    android:background="#008000"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Bayar"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:textStyle="bold" />


            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RadioGroup
                    android:id="@+id/radio_group"
                    android:layout_width="match_parent"
                    android:layout_height="490dp"
                    android:layout_toRightOf="@+id/gender_textview"
                    android:orientation="vertical">
                    <RadioButton
                        android:id="@+id/KonsultasiPerancanganSistemInformasi_radio_btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="-"
                        />
                    <RadioButton
                        android:id="@+id/JasaKonsultasiPengembanganSistemIOT_radio_btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="-"
                        />
                    <RadioButton
                        android:id="@+id/JasaKonsultasiInstalasidanKonfigurasiPerangkatIT_radio_btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="-"
                        />
                    <RadioButton
                        android:id="@+id/JasaKonsultasiPengembanganSistemTrackingIndoordanOutdoor_radio_btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="-"
                        />
                </RadioGroup>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>